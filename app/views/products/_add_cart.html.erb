<div id="add_cart-options-<%= product.id %>" class="modal" style="display: none;">
  <%= simple_form_for product, :url => new_cart_path(), :html => {:method => :put, :class => 'form-horizontal' } do |f| %>
    <div class="modal-header">
      <a class="close" data-dismiss="modal">&#215;</a>
      <h3><%= t(:change_category) %> <%=product.stock.quantity %></h3>
    </div>
    <div class="modal-body">
      <%= f.input :quantity %>
    </div>
    <div class="modal-footer">
      <%= f.submit t(:add_to_cart) , :class => "btn" %>
      <a class="btn" data-dismiss="modal" href="#"><%= t(:close) %></a>
    </div>
    
    
  <% end %>
</div>