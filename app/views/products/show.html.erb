<!--h3><%= t(:account_info) %></h3-->
<p><%= @product.name %>
  [<%= @product.unit_price %><%=t(:currency)%> / <%= @product.measurement %>]
</p>
<p><%= t(:stock_quantity) %>: <%= @stock.nil? ? 0 : @stock.quantity %></p>
<p>
    <a data-toggle="modal" href="#add_cart-options-<%= @product.id %>" class="btn btn-warning" type="button"><%= t(:add_to_cart) %></a>
    
    &nbsp;&nbsp;&nbsp;
    <%= link_to t(:back), stocks_path, :class => 'btn'%>
    
    <div id="add_cart-options-<%= @product.id %>" class="modal" style="display: none;">
      <%= simple_form_for @cart , :url => carts_path, :method => :post,  :html => {:class => 'form-horizontal' } do |f| %>
        <div class="modal-header">
          <a class="close" data-dismiss="modal">&#215;</a>
          <h3><%= t(:add_to_cart) %></h3>
        </div>
        <div class="modal-body">
          <%= f.input :quantity, :label => t(:quantity), :auto_focus => true %>
          <%= f.input :product_id, :as => :hidden, :input_html =>{:value => @product.id} %>
        </div>
        <div class="modal-footer">
          <%= f.submit t(:add_to_cart) , :class => "btn" %>
          <a class="btn"  data-dismiss="modal" href="#"><%= t(:back)%></a>
        </div>
      <% end %>
    </div>
    
    
    
</p>
<%= render 'histories' %>
