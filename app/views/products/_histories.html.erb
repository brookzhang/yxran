<%if !@histories.nil? %>
<table class="table  table-striped">
	  <thead>
      <tr>
          <th><%= t(:adjust_category) %></th>
          <th><%= t(:adjusted_by) %></th>
          <th><%= t(:adjusted_at) %></th>                              
      </tr>
  </thead>   
  <tbody>
  <% @histories.each do |history| %>
    <tr>
        <td><%= l(history.adjust_category,"adjust_category") %></td>
        <td><%= '+' unless  history.adjusted_by.nil? ? 0 : history.adjusted_by < 0  %><%= history.adjusted_by %></td>
        <td><%= history.adjusted_at.to_date %></td>                             
    </tr>
  <% end %>
  </tbody>
</table>
<%end%>