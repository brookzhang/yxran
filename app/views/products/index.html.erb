<div class="span8">
  <%= render :partial => '/categories/list_by_tree' %>
  <% if @products  %>
  <table class="table table-condensed">
    <thead>
      <tr>
        <th><%= t(:product_name) %></th>
        <th><%= t(:unit_price) %></th>
        <th></th>   
      </tr>
    </thead>   
    <tbody>
    <% @products.each do |product| %>
	  <%= render product %>
    <% end %>
    </tbody>
	<tr>
	  <td colspan="3">
		<%= link_to t(:view_carts), carts_path, :class => 'btn btn-primary' %>
	  </td>
	</tr>
  </table>
  <%end%>
</div> 