<p><%= t(:name) %>: <%= @user.name %></p>
<p><%= t(:email) %>: <%= @user.email if @user.email %></p>
<p><%= t(:role) %>: <%= t(@user.roles.first.name) unless @user.roles.first.nil? %></p>
<p><%= t(:location) %>: <%= @user.store.name unless @user.store_id.nil? %>
  <a data-toggle="modal" href="#store-options-<%= @user.id %>" class="btn btn-mini btn-warning" type="button"><%= t(:change_store) %></a>
  <%= render :partial => 'store' %>
</p>
<p><%= t(:created_at) %>: <%= @user.created_at.to_date %></p>


