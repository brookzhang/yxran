
<%= simple_form_for(@user, :url => { :action => "update_password" } , :html => {:class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>
  <%= display_base_errors @user %>
  <%= f.input :password, :label => t(:new_password) , :autofocus => true %>
  <%= f.input :password_confirmation, :label => t(:password_confirmation)%>
  <%= f.input :current_password, :label => t(:current_password) %> 
  <div class="control-group">
    <div class="controls">
      <%= f.button :submit, t(:submit), :class => 'btn' %>
      <%= link_to t(:back), @user, :class => 'btn' %>
    </div>
  </div>
<% end %>

