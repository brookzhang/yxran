<div class="span8">
<table class="table table-condensed">
	  <thead>
      <tr>
          <th><%= t(:product) %></th>
          <th><%= t(:amount) %></th>
          <th><%= t(:time) %></th>
          <th></th>
          <th></th>                                      
      </tr>
  </thead>   
  <tbody>
  <% @sales.each do |sale| %>
    <tr>
        <td><%= sale.product.name %></td>
        <td><%= link_to sale.amount.to_s, sale %></td>
        <td><%= sale.created_at %></td>
        <td>
        </td>
        <td></td>                                       
    </tr>
  <% end %>
  <tr>
    <td colspan="5">
			<%= link_to t(:back), root_path, :class => 'btn'%>
    </td>
  </tr>
  </tbody>
</table>
</div> 