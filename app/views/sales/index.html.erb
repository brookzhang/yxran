<div >
<table class="table table-condensed">
	  <thead>
      <tr>
          <th><%=t(:sale_id)%></th>
          <th><%= t(:status) %></th>                                      
      </tr>
  </thead>   
  <tbody>
  <% @sales.each do |sale| %>
    <tr>
        <td>
          <%= link_to  sale.number, sale, :class => "badge badge-warning" %> 
          <%= sale.actual_amount %><%= t(:currency)%>
        </td>
        <td><%= l(sale.status, "sale_status") %> <%=sale.created_at.to_s(:duty_time)  %></td>                                       
    </tr>
  <% end %>
  <tr>
    <td colspan="3">
      <%= will_paginate @sales %>
    </td>
  </tr>
  <tr>
    <td colspan="3">
      <%= link_to t(:record_a_sale), stocks_path, :class => 'btn btn-primary' %>
      <%= link_to t(:back), root_path, :class => 'btn'%>
    </td>
  </tr>
  </tbody>
</table>
</div> 