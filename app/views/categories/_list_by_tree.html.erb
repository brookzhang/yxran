
  <div class="input-append">
  <a class="button btn-primary " href="<%=products_path(:category_id => 0)%>" >
    <%=t(:root_category) %> <i class="icon-chevron-right  icon-white"></i>
  </a>
      
  <% if !@category.nil? && @category.parent_id != 0 %>
    <a class="button btn-info " href="<%=products_path(:category_id => @category.parent)%>" >
      <%=@category.parent.name %> <i class="icon-chevron-right  icon-white"></i>
    </a>
  <%end%>
  
  <% if !@category.nil? %>
    <a class="button btn-info " href="<%=products_path(:category_id => @category)%>" >
      <%=@category.name %> <i class="icon-chevron-right  icon-white"></i>
    </a>
  <%end%>
  </div>



<div>
  <%@categories.each do |category|%>
      <%=link_to(category.name, products_path(:category_id => category), :class => 'btn') %>
  <%end%>
</div>
