<h2><%= t(:edit_account) %></h2>
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'form-vertical' }) do |f| %>
  <%= f.error_notification %>
  <%= display_base_errors resource %>
  <%= f.input :name, :label => t(:name), :autofocus => true %>
  <%= f.input :email, :label => t(:email), :required => true %>
  <%= f.input :password, :label => t(:password), :autocomplete => "off", :hint => t(:if_no_change_leave_empty), :required => false %>
  <%= f.input :password_confirmation, :label => t(:password_confirmation), :required => false %>
  <%= f.input :current_password, :label => t(:current_password), :hint => t(:need_current_password_for_confirm), :required => true %>
  <%= f.button :submit, t(:update), :class => 'btn-primary' %>
<% end %>
<%= link_to t(:back), :back, :class => 'btn'%>