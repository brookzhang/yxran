
  <div class="large-4 small-8" style="margin-top:20px;margin-left:15px;">
  <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name) ) do |f| %>
    <%= f.input :login, :label => t(:login), :autofocus => true %>
    <%= f.input :password, :label => t(:password) %>
    <%= f.input :remember_me, :label => t(:remember_me) , :as => :boolean if devise_mapping.rememberable? %>
    <%= f.button :submit, t(:sign_in),  :class => 'tiny button', :id => 'user_submit'   %>
  <% end %>
  </div>
<%#= render "devise/shared/links" %>