<div style="min-height:70px;">
  <%if @sales.count > 0 
    %>
  <table class="table table-striped  "> 
    <thead>
      <tr>
          <th><%= t(:product_name) %></th>
          <th><%= t(:actual_amount) %> </th>
          <th> </th>
          <th></th>
      </tr>
    </thead>
    <tbody>
    <% 
      sum_amount = 0
      @sales.each do |t| 
        sum_amount += t.actual_amount
      %>
      <tr>
          <td><%= link_to t.number, "#", :class => 'badge badge-warning' %></td>
          <td align="right"><%= t.actual_amount.round(2)  %></td>
          <td align="right"><%= t.created_at.to_s(:date_time)  %></td>       
          <td align="right"><%= t.user.name  %></td>       
      </tr>
    <% end %>
      <tr>
        <td colspan="2"><%=t(:sum_amount)%></td>
        <td><%=sum_amount.round(2) %> <%= t(:currency)%></td>
        <td></td>
      </tr>
    </tbody>
  </table>
  <%end%>
</div>
