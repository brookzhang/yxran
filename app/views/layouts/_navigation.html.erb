<%= link_to t(:app_name), root_path, :class => 'brand' %>
<ul class="nav">
  <% if user_signed_in? %>
    <li><%= link_to(t(:my_account), user_path(current_user)) %></li>
    <% if current_user.has_role? :admin %>
      <li><%= link_to(t(:maintain), maintain_dashboard_path) %></li>
    <% end %>
    
    <li><%= link_to(t(:sign_out), destroy_user_session_path, :method=>'delete' ) %>        </li>
  <% end %>
  
</ul>