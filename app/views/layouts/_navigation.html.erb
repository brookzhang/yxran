<%= link_to t(:app_name), root_path, :class => 'brand' %>
<ul class="nav">
  <% if user_signed_in? %>
    <% if !current_user.store_id.nil? %>
      <li><a href="<%=carts_path%>" >
        <i class="icon-home"></i><%=current_user.store.name %>
      </a></li>
      
    <% end %>
    <% if current_user.has_role? :admin %>
      <li><a href="<%=maintain_dashboard_path%>" >
        <i class="icon-th-large"></i><%=t(:maintain) %>
      </a></li>
    <% end %>
    
    <li><a href="<%=destroy_user_session_path%>" data-method="delete" rel="nofollow" >
      <i class="icon-off"></i><%=t(:sign_out) %>
    </a></li>
  <% end %>
  
</ul>