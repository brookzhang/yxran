<div class="span8">
<table class="table table-condensed">
	  <thead>
      <tr>
          <th><%= t(:transfer_id) %></th>
          <th><%= t(:from_store) %></th> 
          <th><%= t(:status) %></th>    
          <th><%= t(:created_at) %></th>  
          <th></th>                      
      </tr>
  </thead>   
  <tbody>
  <% @transfers.each do |transfer| %>
    <tr>
        <td><%= link_to '#' + transfer.id.to_s, transfer %></td>
        <td><%= link_to transfer.from_store.name, stocks_path(:store_id => transfer.from_store_id) %></td>
        <td><%= l(transfer.status, 'transfer_status') %></td>           
        <td><%= transfer.created_at.to_date %></td>              
        <td><%= link_to t(:confirm_to_receive), edit_transfer_path(transfer), :class => 'btn' if transfer.status == 1 %></td>               
    </tr>
  <% end %>
  <tr>
    <td colspan="5">
	  <%= link_to t(:back), root_path, :class => 'btn'%>
    </td>
  </tr>
  </tbody>
</table>
</div> 