<%= simple_form_for @transfer, :html => {:class => 'form-horizontal' } do |f| %>
  <%= f.error_notification %>
  <%= display_base_errors @transfer %>
  <%= f.input :receive_remark, :label => t(:receive_remark), :autofocus => true %>
  <div><%= render 'transfer_details' %></div>
  
  <div class="control-group">
    <div class="controls">
      <%= f.button :submit, t(:confirm_to_receive), :class => 'btn' %>
      <%= link_to t(:back), :back, :class => 'btn' %>
    </div>
  </div>
<% end %>

