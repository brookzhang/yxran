<%= simple_form_for @transfer, :html => {:class => 'form-horizontal' } do |f| %>
  <%= f.error_notification %>
  <%= display_base_errors @transfer %>
  <%= f.input :to_store_id, :label => t(:to_store), :collection => @stores, :prompt => t(:choose_to_store), :required => true, :autofocus => true %>
  
  <%= f.input :transfer_remark, :label => t(:transfer_remark) %>
  <div class="control-group">
    <div class="controls">
      <%= f.button :submit, t(:submit), :class => 'btn' %>
      <%= link_to t(:back), :back, :class => 'btn' %>
    </div>
  </div>
  
<% end %>

