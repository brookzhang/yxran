
<table class="table table-condensed">
  <thead>
  <tr>
    <th colspan="3">
      <%= link_to t(:new_expense), new_expense_path, :class => 'btn btn-warning' unless current_user.store_id.nil?  %>
      &nbsp;&nbsp;&nbsp;
      <%= link_to t(:back), root_path, :class => 'btn'%>
    </th>
  </tr>
  </thead>
  <thead>
    <tr>
        <th><%= t(:id) %></th>    
        <th><%= t(:expense_content) %></th>   
        <th><%= t(:status) %></th>                                
    </tr>
  </thead>   
  <tbody>
  <% @expenses.each do |e| %>
    <tr>
        <td><%= link_to e.number, e, :class => 'badge badge-warning' %>
        <%= e.amount %> <%=t(:currency)%></td>                                               
        <td><%= e.remark %></td>
        <td><%= l(e.status,"expense_status")  %></td>                        
    </tr>
  <% end %>
  <tr><td colspan="3"><%= will_paginate @expenses %></td></tr>
  </tbody>
</table>