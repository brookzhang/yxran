<div class="span8">
<table class="table table-condensed">
  <thead>
  <tr>
    <th colspan="3">
      <%= link_to t(:new_expense), new_expense_path, :class => 'btn btn-warning' unless current_user.store_id.nil?  %>
      &nbsp;&nbsp;&nbsp;
      <%= link_to t(:back), root_path, :class => 'btn'%>
    </th>
  </tr>
  </thead>
  <thead>
    <tr>
        <th><%= t(:id) %></th>
        <th><%= t(:category) %></th>
        <th><%= t(:amount) %></th>    
        <th><%= t(:status) %></th>                                
    </tr>
  </thead>   
  <tbody>
  <% @expenses.each do |e| %>
    <tr>
        <td><%= link_to '#' + e.id.to_s, e %></td>
        <td><%= l(e.category,"expense_category")  %></td>
        <td><%= e.amount %></td>             
        <td><%= l(e.status,"expense_status")  %></td>                        
    </tr>
  <% end %>
  <tr><td colspan="4"><%= will_paginate @expenses %></td></tr>
  </tbody>
</table>
</div> 