<%= simple_form_for [:maintain,@member], :html => {:class => 'form-horizontal' } do |f| %>
  <%= f.error_notification %>
  <%= display_base_errors @member %>
  <%= f.input :name, :label => t(:name), :required => true , :autofocus => true %> 
  <%= f.input :phone, :label => t(:phone), :required => true %>
  <%= f.input :address, :label => t(:address) %>
  <%= f.input :remark, :label => t(:remark) %>
  <div class="control-group">
    <div class="controls">
      <%= f.button :submit, t(:submit), :class => 'btn' %>
      <%= link_to t(:back), :back, :class => 'btn' %>
    </div>
  </div>
<% end %>

