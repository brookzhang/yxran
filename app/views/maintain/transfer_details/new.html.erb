<div class="span8">
	<%=form_for [:maintain,@transfer,@transfer_detail] do |f| %>
	<table class="table table-condensed">
			<thead>
				<tr>
						<th></th>
						<th><%= t(:product) %></th>
						<th><%= t(:stock) %></th>
						<th></th>                                      
				</tr>
		</thead>   
		<tbody>
			<% @stocks.each do |stock| %>
			<tr>
					<td><%= f.check_box :product_id %></td>
					<td><%= stock.product.name %></td>
					<td><%= stock.quantity %> <%= stock.product.measurement %></td>            
				</tr>
				 
			<% end %>
		<tr>
			<td colspan="3">
					<%= f.submit  t(:submit), :class => 'btn' %>
			</td>
		</tr>
		</tbody>
	</table>
	<%end%>
</div> 