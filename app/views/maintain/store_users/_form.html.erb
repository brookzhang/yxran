<%= simple_form_for [:maintain,@store_user], :html => {:class => 'form-horizontal' } do |f| %>
  <%= f.error_notification %>
  <%= display_base_errors @store_user %>
  <%= f.input :store_id, :label => t(:store), :collection => @stores, :label_method => :name, :value_method => :id, :required => true, :prompt => t(:choose_store) %>
  
  <%= f.input :balance, :label => t(:initial_balance) unless !@store.balance.nil?%>
  
  <%= f.input :remark, :label => t(:remark) %>
  <div class="control-group">
    <div class="controls">
      <%= f.button :submit, t(:submit), :class => 'btn' %>
      <%= link_to t(:back), maintain_stores_path, :class => 'btn' %>
    </div>
  </div>
<% end %>

