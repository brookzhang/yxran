<%unless @transfer_details.nil? %>
<table class="table  table-striped"> 
  <tbody>
  <% @transfer_details.each do |t| %>
    <tr>
        <td><%= t.product.name %></td>
        <td><%= t.quantity.to_s + t.product.measurement %>
          / <%= Stock.get_quantity(@transfer.from_store_id, t.product_id).to_s + t.product.measurement %>
        </td>
        <td><%= link_to(t(:delete), maintain_transfer_transfer_detail_path(@transfer,t), :data => { :confirm => t(:are_you_sure_to_delete) }, :method => :delete, :class => 'btn')  %>     </td>
               
    </tr>
  <% end %>
  </tbody>
</table>
<%end%>