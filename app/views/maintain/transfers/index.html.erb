<div class="span8">
<table class="table table-condensed">
	  <thead>
      <tr>
          <th><%= t(:from_store) %></th>
          <th><%= t(:to_store) %></th>
          <th><%= t(:product) %></th>
          <th><%= t(:quantity) %></th>
          <th><%= t(:amount) %></th>   
          <th><%= t(:remark) %></th>    
          <th><%= t(:created_at) %></th>                      
      </tr>
  </thead>   
  <tbody>
  <% @transfers.each do |transfer| %>
    <tr>
        <td><%= link_to transfer.from_store.name, maintain_store_path(transfer.from_store) %></td>
        <td><%= link_to transfer.to_store.name, maintain_store_path(transfer.to_store) %></td>
        <td><%= link_to transfer.product.name, maintain_product_path(transfer.product)  %></td>
        <td><%= link_to transfer.quantity, [:maintain, transfer] %></td>       
        <td><%= transfer.remark %></td>           
        <td><%= transfer.created_at.to_date %></td>                      
    </tr>
  <% end %>
  <tr>
    <td colspan="5">
      <%= link_to t(:create), new_maintain_transfer_path, :class => 'btn' %>
	  <%= link_to t(:back), maintain_dashboard_path, :class => 'btn'%>
    </td>
  </tr>
  </tbody>
</table>
</div> 