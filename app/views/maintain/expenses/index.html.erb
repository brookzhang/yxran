<div class="span8">
<table class="table table-condensed">
  <thead>
    <tr>
        <th><%= t(:store) %></th>
        <th><%= t(:amount) %></th>  
        <th><%= t(:remark) %></th>                                
    </tr>
  </thead>   
  <tbody>
  <% @expenses.each do |e| %>
    <tr>
        <td><span class="label label-info"><%=e.number%></span><%= e.store.name %></td>
        <td><%= e.amount %></td>                                    
        <td><%= e.remark %></td>
        <td>
          <%= l(e.status.to_s, 'expense_status') %>
          <%= link_to t(:cancel), cancel_maintain_expense_path(e), :class => 'btn' if e.status == 1 %></td>
    </tr>
  <% end %>
    <tr>
      <td colspan="3">
        <%= will_paginate @expenses %>
      </td>
    </tr>
    <tr>
      <td colspan="3">
              <%= link_to t(:back), maintain_dashboard_path, :class => 'btn'%>
      </td>
    </tr>
  </tbody>
</table>
</div> 