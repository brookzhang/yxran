<div class="span8">
<%=form_tag maintain_products_path, :method => 'get', :class => "form-inline" do%>
	<%= text_field_tag :category_name, @product.category_name, :placeholder => t(:category_name), :class => "input-small" %>
	<%= text_field_tag :name, @product.name, :placeholder => t(:product_name), :class => "input-small" %>
  <button type="submit" class="btn"><%=t(:search)%></button>
<%end%>
<table class="table table-condensed">
	  <thead>
      <tr>
          <th><%= t(:product_name) %></th>
          <th><%= t(:category) %></th>
          <th><%= t(:unit_price) %></th>                         
      </tr>
  </thead>   
  <tbody>
  <% @products.each do |product| %>
    <tr>
        <td><%= link_to product.name, [:maintain, product]  %></td>
        <td><%= product.category.name %></td>
        <td><%= product.unit_price %> <%= t(:currency)%> / <%= product.measurement %></td>            
    </tr>
  <% end %>
  <tr>
    <td colspan="3">
      <%= will_paginate @products %>
    </td>
  </tr>
  <tr>
    <td colspan="3">
      <%= link_to t(:create), new_maintain_product_path, :class => 'btn' %>
	  <%= link_to t(:back), maintain_products_path, :class => 'btn'%>
    </td>
  </tr>
  </tbody>
</table>
</div> 