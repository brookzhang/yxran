<div id="category-options-<%= @product.id %>" class="modal" style="display: none;">
  <%= simple_form_for [:maintain, @product], :url => maintain_product_path(@product), :html => {:method => :put, :class => 'form-horizontal' } do |f| %>
    <div class="modal-header">
      <a class="close" data-dismiss="modal">&#215;</a>
      <h3><%= t(:change_category) %></h3>
    </div>
    <div class="modal-body">
      <%= f.input :category_id, :collection => Category.all, :as => :radio_buttons, :label_method => lambda {|r| t(r.name)}, :label => false%>
    </div>
    <div class="modal-footer">
      <%= f.submit t(:change_category) , :class => "btn" %>
      <a class="btn" data-dismiss="modal" href="#"><%= t(:close) %></a>
    </div>
  <% end %>
</div>