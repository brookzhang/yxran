<%if @expenses.count > 0 %>
<table class="table table-condensed">
	  <thead>
      <tr>
          <th><%= t(:category) %></th>
          <th><%= t(:amount) %></th>
          <th><%= t(:time) %></th>
          <th></th>                                      
      </tr>
  </thead>   
  <tbody>
  <% @expenses.each do |expense| %>
    <tr>
        <td><%= l(expense.category, 'expense_category') %></td>
        <td><%= link_to expense.amount.to_s + t(:money), [:maintain,expense] %></td>
        <td><%= expense.created_at.to_s(:date_time) %>
        </td>                                    
    </tr>
  <% end %>
  <tr><td><%= link_to '...' + t(:list_all) ,maintain_expenses_path %></td></tr>
  </tbody>
</table>
<%end %>