<%= simple_form_for [:maintain,@store], :html => {:class => 'form-horizontal' } do |f| %>
  <%= f.error_notification %>
  <%= display_base_errors @store %>
  <%= f.input :name, :label => t(:store_name), :autofocus => true %> 
  <%= f.input :category, :label => t(:store_category)  %>
  <%= f.input :remark, :label => t(:remark) %>
  <%= f.button :submit, t(:submit), :class => 'btn' %>
  <%= link_to t(:back), :back, :class => 'btn' %>
<% end %>

