<%= simple_form_for [:maintain,@store], :html => {:class => 'form-horizontal' } do |f| %>
  <%= f.error_notification %>
  <%= display_base_errors @store %>
  <%= f.input :name, :label => t(:store_name), :autofocus => true %> 
  <%#= f.input :category, :label => t(:store_category)  %>
  
  <%= f.input :category, :label => t(:store_category), :collection => @lookups, :label_method => :description, :value_method => :code, :required => true, :prompt => t(:choose_store_category) %>
  
  <%= f.input :balance, :label => t(:initial_balance) unless !@store.balance.nil?%>
  
  <%= f.input :remark, :label => t(:remark) %>
  <div class="control-group">
    <div class="controls">
      <%= f.button :submit, t(:submit), :class => 'btn' %>
      <%= link_to t(:back), maintain_stores_path, :class => 'btn' %>
    </div>
  </div>
<% end %>

