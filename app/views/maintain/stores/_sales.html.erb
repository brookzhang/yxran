<%if @sales.count > 0 %>
<table class="table table-condensed">
	  <thead>
      <tr>
          <th><%= t(:category) %></th>
          <th><%= t(:amount) %></th>
          <th><%= t(:time) %></th>
          <th></th>                                      
      </tr>
  </thead>   
  <tbody>
  <% @sales.each do |sale| %>
    <tr>
        <td><%= l(sale.category, 'sale_category') %></td>
        <td><%= link_to sale.amount.to_s + t(:money), [:maintain,sale] %></td>
        <td><%= sale.created_at.to_s(:date_time) %>
        </td>                                    
    </tr>
  <% end %>
  <tr><td><%= link_to '...' + t(:list_all) ,maintain_sales_path %></td></tr>
  </tbody>
</table>
<%end %>