<%if @stocks.count > 0 %>
<table class="table table-condensed">
	  <thead>
      <tr>
          <th><%= t(:product) %></th>
          <th><%= t(:stock) %></th>
          <th></th>                                      
      </tr>
  </thead>   
  <tbody>
  <% @stocks.each do |stock| %>
    <tr>
        <td><%= stock.product.name %></td>
        <td><%= stock.quantity %> <%= stock.product.measurement %></td>
        <td><%= link_to t(:show), [:maintain,stock], :class => 'btn' %>
        </td>                                    
    </tr>
  <% end %>
  <tr><td><%= link_to '...' + t(:list_all) ,maintain_stocks_path(:store_id => @store.id) %></td></tr>
  </tbody>
</table>
<%end %>