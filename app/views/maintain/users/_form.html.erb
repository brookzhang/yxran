<%= simple_form_for [:maintain,@user], :html => {:class => 'form-horizontal' } do |f| %>
  <%= f.error_notification %>
  <%= display_base_errors @user %>
  <%= f.input :account, :label => t(:account) , :autofocus => true, :required => true%>
  <%= f.input :role, :label => t(:role), :collection => @roles, :as => :check_boxes%> 
  <%= f.input :name, :label => t(:user_name), :required => true %>
  <%= f.input :email, :label => t(:email), :required => true %> 
  <%= f.input :from_time, :label => t(:from_time)  %> 
  <%= f.input :to_time, :label => t(:to_time)  %> 
  <%= f.input :password, :label => t(:password), :placeholder => t(:leave_blank_not_change_password)%>  
  <div class="control-group">
    <div class="controls">
      <%= f.button :submit, t(:submit), :class => 'btn' %>
      <%= link_to t(:back), maintain_users_path, :class => 'btn' %>
    </div>
  </div>
<% end %>

