<%= simple_form_for [:maintain,@user], :html => {:class => 'form-horizontal' } do |f| %>
  <%= f.error_notification %>
  <%= display_base_errors @user %>
  <%= f.input :account, :label => t(:account) %>
  <%= f.input :name, :label => t(:user_name), :autofocus => true %>
  <%= f.input :email, :label => t(:email) %> 
  <%= f.input :password, :label => t(:password) %> 
  <%= f.input :password_confirmation, :label => t(:password_confirmation) %> 
  <div class="control-group">
    <div class="controls">
      <%= f.button :submit, t(:submit), :class => 'btn' %>
      <%= link_to t(:back), maintain_users_path, :class => 'btn' %>
    </div>
  </div>
<% end %>

