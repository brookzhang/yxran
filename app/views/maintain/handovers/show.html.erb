
<p><%= t(:store_name) %>: <%= @store.name %></p>
<p><%= t(:employee_name) %>: <%= @user.name %></p>
<p><%= t(:take_amount) %>: <%= @handover.take_amount %> <%=t(:currency)%></p>
<p><%= t(:take_remark) %>: <%= @handover.take_remark %></p>
<p><%= t(:took_at) %>: <%= @handover.took_at.to_s(:date_time) %></p>
<p><%= t(:sale_amount) %>: +<%=@sale_amount %> <%=t(:currency)%></p>
<p><%= t(:expense_amount) %>: -<%=@expense_amount %> <%=t(:currency)%></p>
<% if @handover.hand_amount.nil? %>
  <p><%= t(:store_balance) %>: <%= @store.balance %> <%=t(:currency) %></p>
<%else%>
  <p><%= t(:hand_amount) %>: <%= @handover.hand_amount %> <%=t(:currency) %></p>
  <p><%= t(:hand_remark) %>: <%= @handover.hand_remark %></p>
  <p><%= t(:handed_at) %>: <%= @handover.handed_at.to_s(:date_time) %></p>
<%end%>

<%= link_to t(:back), maintain_handovers_path, :class => 'btn'%>


<%= render 'sales' %>
<%= render 'expenses' %>