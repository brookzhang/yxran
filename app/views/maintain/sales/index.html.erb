<div class="span8">
<table class="table table-condensed">
	  <thead>
      <tr>
          <th><%= t(:sale_id) %></th>
          <th><%= t(:store) %></th>
          <th><%= t(:employee) %></th>
          <th><%= t(:amount) %></th>
          <th><%= t(:time) %></th>                                     
      </tr>
  </thead>   
  <tbody>
  <% @sales.each do |sale| %>
    <tr>
        <td><%= link_to sale.number, [:maintain, sale], :class => 'badge badge-warning' %>
          <%=l(sale.status.to_s, 'sale_status') if sale.status == 9 %>
        </td>
        <td><%= sale.store.name %></td>
        <td><%= sale.user.name %></td>
        <td><%= sale.amount.to_s %></td>
        <td><%= sale.created_at.to_s(:date_time) %></td>                                    
    </tr>
  <% end %>
  <tr>
    <td colspan="6">
			<%= will_paginate @sales %>
    </td>
  </tr>
  <tr>
    <td colspan="6">
			<%= link_to t(:back), maintain_dashboard_path, :class => 'btn'%>
    </td>
  </tr>
  </tbody>
</table>
</div> 