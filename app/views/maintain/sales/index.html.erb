<div class="span8">
<table class="table table-condensed">
	  <thead>
      <tr>
          <th><%= t(:store) %></th>
          <th><%= t(:category) %></th>
          <th><%= t(:amount) %></th>
          <th><%= t(:time) %></th>
          <th></th>
          <th></th>                                      
      </tr>
  </thead>   
  <tbody>
  <% @sales.each do |sale| %>
    <tr>
        <td><%= sale.store.name %></td>
        <td><%= l(sale.category, 'sale_category') %></td>
        <td><%= link_to sale.amount.to_s, [:maintain, sale] %></td>
        <td><%= sale.created_at.to_s(:date_time) %></td>
        <td>
        </td>
        <td></td>                                       
    </tr>
  <% end %>
  <tr>
    <td colspan="5">
			<%= link_to t(:back), maintain_dashboard_path, :class => 'btn'%>
    </td>
  </tr>
  </tbody>
</table>
</div> 