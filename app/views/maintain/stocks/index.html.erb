<div class="span8">
<table class="table table-condensed">
	  <thead>
      <tr>
          <th><%= t(:store) %></th>
          <th><%= t(:product) %></th>
          <th><%= t(:stock) %></th>
          <th></th>                                      
      </tr>
  </thead>   
  <tbody>
  <% @stocks.each do |stock| %>
    <tr>
        <td><%= stock.store.name %></td>
        <td><%= stock.product.name %></td>
        <td><%= stock.quantity %> <%= stock.product.measurement %></td>
        <td><%= link_to t(:show), [:maintain,stock], :class => 'btn' %>
			
        </td>                                    
    </tr>
  <% end %>
  <tr>
    <td colspan="5">
      <%#= link_to t(:create_stock), new_maintain_stock_path, :class => 'btn' %>
	  <%= link_to t(:back), maintain_dashboard_path, :class => 'btn'%>
    </td>
  </tr>
  </tbody>
</table>
</div> 