<%= simple_form_for [:maintain,@stock], :html => {:class => 'form-horizontal' } do |f| %>
  <%= f.error_notification %>
  <%= display_base_errors @stock %>
  <%= f.input :product_id, :label => t(:product_name), :autofocus => true %> 
  <%= f.input :store_id, :label => t(:store_name)  %>
  <%= f.input :quantity, :label => t(:quantity) %>
  <%= f.input :safe_stock, :label => t(:safe_stock) %>
  <%= f.input :remark, :label => t(:remark) %>
  <%= f.button :submit, t(:submit), :class => 'btn' %>
  <%= link_to t(:back), :back, :class => 'btn' %>
<% end %>

