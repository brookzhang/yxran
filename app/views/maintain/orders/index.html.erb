<div class="span8">
<table class="table table-condensed">
	  <thead>
      <tr>
          <th><%= t(:store) %></th>
          <th><%= t(:product) %></th>
          <th><%= t(:quantity) %></th>
          <th><%= t(:amount) %></th>   
          <th><%= t(:remark) %></th>    
          <th><%= t(:created_at) %></th>                      
      </tr>
  </thead>   
  <tbody>
  <% @orders.each do |order| %>
    <tr>
        <td><%= link_to order.store.name, maintain_orders_path(:store_id => order.store_id) %></td>
        <td><%= link_to order.product.name, maintain_orders_path(:product_id => order.product_id)  %></td>
        <td><%= link_to order.quantity, [:maintain, order] %></td> 
        <td><%= order.amount %></td>           
        <td><%= order.remark %></td>           
        <td><%= order.created_at.to_date %></td>                      
    </tr>
  <% end %>
  <tr>
    <td colspan="5">
      <%= link_to t(:create), new_maintain_order_path, :class => 'btn' %>
	  <%= link_to t(:back), maintain_dashboard_path, :class => 'btn'%>
    </td>
  </tr>
  </tbody>
</table>
</div> 