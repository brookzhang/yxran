<div class="span8">
<table class="table table-condensed">
	  <thead>
      <tr>
          <th><%= t(:order_id) %></th>
          <th><%= t(:store) %></th> 
          <th><%= t(:status) %></th>    
          <th><%= t(:created_at) %></th>                      
      </tr>
  </thead>   
  <tbody>
  <% @orders.each do |order| %>
    <tr>
        <td><%= link_to order.number + order.id.to_s, [:maintain, order] %></td>
        <td><%= link_to order.store.name, maintain_store_path(order.store) %></td>     
        <td><%= l(order.status, 'order_status') %></td>           
        <td><%= order.created_at.to_date %></td>                      
    </tr>
  <% end %>
  <tr>
    <td colspan="4">
      <%= will_paginate @orders %>
    </td>
  </tr>
  <tr>
    <td colspan="4">
	  <%= link_to t(:back), maintain_dashboard_path, :class => 'btn'%>
    </td>
  </tr>
  </tbody>
</table>
</div> 