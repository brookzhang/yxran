<%unless @order_details.nil? %>
<table class="table  table-striped">
  <thead>
    <tr>
        <th><%= t(:product_name) %></th>
        <th><%= t(:quantity) %> / <%= t(:stock)%></th>                        
    </tr>
  </thead>
  <tbody>
  <% @order_details.each do |t| %>
    <tr>
        <td><span class="label label-info"><%= t.product.name %></span></td>
        <td align="right"><%= t.quantity.to_s  %>
          / <%= Stock.get_quantity(@order.store_id, t.product_id)%>
          <%= t.product.measurement.name %>
        </td>
               
    </tr>
  <% end %>
  </tbody>
</table>
<%end%>