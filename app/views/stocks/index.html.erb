<div class="span8">
  <%= render 'category' %>
<table class="table table-condensed">
	  <thead>
      <tr>
          <th><%= t(:product) %></th>
          <th><%= t(:stock) %></th>
          <th></th>                                      
      </tr>
  </thead>   
  <tbody>
    <% @stocks.each do |stock| %>
	  <%= render stock %>
    <% end %>
    <tr>
      <td colspan="3">
        <%= will_paginate @stocks %>
      </td>
    </tr>
	<tr>
	  <td colspan="3">
        <%= link_to t(:view_carts), carts_path, :class =>'btn btn-primary' %>
	  </td>
	</tr>
  </tbody>
</table>
</div> 