<div class="span8">
<table class="table table-condensed">
	  <thead>
      <tr>
          <th><%= t(:product) %></th>
          <th><%= t(:stock) %></th>
          <th></th>                                      
      </tr>
  </thead>   
  <tbody>
  <% @stocks.each do |stock| %>
    <tr>
        <td><%= stock.product.name %></td>
        <td><%= stock.quantity %> <%= stock.product.measurement %></td>
        <td><%= link_to t(:show), stock.product, :class => 'btn' %>
        </td>                                    
    </tr>
  <% end %>

  </tbody>
</table>
</div> 