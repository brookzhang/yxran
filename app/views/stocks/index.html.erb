<div class="span8">
  <div class="left">
  <%@top_categories.each do |category|%>
    <div class="btn-group">
      <%if @current_category && @current_category.parent_id == category.id %>
          <a class="btn btn-info dropdown-toggle" data-toggle="dropdown" href="#">
          <%= @current_category.name %>
        <%else%>
          <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
          <%= category.name  %>
        <%end%>
        <span class="caret"></span>
      </a>
      <ul class="dropdown-menu">
        <li>
          <a href="#" onclick="submit_parameter_with_form_id('search_and_filter','category_id','');">
            <%= "--" + category.name + "--" %>
          </a>
        </li>
        <%category.subcategories.each do |sub| %>
        <li>
          <a href="#" onclick="submit_parameter_with_form_id('search_and_filter','category_id','<%=sub.id%>');">
            <span <%="class=label" if @current_category && @current_category.id == sub.id %> >
            <%= sub.name %>
            </span>
          </a>
        </li>

        <%end%>
      </ul>
    </div>
  <%end%>
  </div>
  


  <div class="right"> 
  <%#= render 'category' %>
    <form class="form-search right" method='get' action=''  id="search_and_filter">    
      <input type="hidden" name="category_id" value="<%=params[:category_id]%>" />
      <!-- <input type='text' name='key_words' placeholder = "Search by Keyword"  class="input-medium search-query" style="margin-right:-40px;" value="<%= params[:key_words] %>">
      <button type="submit" style="background:transparent;border: none;"><i class="icon-search"></i></button> -->   
    </form>
  </div>
  <table class="table table-condensed">
  	  <!-- <thead>
        <tr>
            <th><%= t(:product) %></th>
            <th><%= t(:stock) %></th>
            <th></th>                                      
        </tr>
    </thead>    -->
    <tbody>
      <% @stocks.each do |stock| %>
  	  <%= render stock %>
      <% end %>
      <tr>
        <td colspan="3">
          <%= will_paginate @stocks %>
        </td>
      </tr>
  	<tr>
  	  <td colspan="3">
          <%= link_to t(:view_carts), carts_path, :class =>'btn btn-primary' %>
  	  </td>
  	</tr>
    </tbody>
  </table>
</div> 

<!-- Modal -->
<div id="ajax-modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>