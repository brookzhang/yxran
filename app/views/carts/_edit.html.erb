<%= simple_form_for @cart, :html => {:class => 'form-horizontal' } do |f| %>
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3><%= t(:edit_cart) %> </h3>
  </div>
  <div class="modal-body">
    <%= f.input :quantity,label: false, :wrapper_html => {class: "input-prepend input-append"} do %>
      <span class="add-on"><%=t(:quantity)%></span>
        <%= f.input_field :quantity %>
      <span class="add-on"><%=@cart.product.price(@cart.store_id)%></span>
    <% end %>
  </div>

  <div class="modal-footer">
    <%= f.submit t(:submit) , :class => "btn", :input_html => { 'data-dismiss' => "modal"} %>
    <a class="btn" data-dismiss="modal" href="#"><%= t(:back)%></a>
  </div>
<% end %>