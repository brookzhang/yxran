
<table width="100%" >
  <thead>
  <tr>
    <th colspan="3">
      <%= link_to t(:add_product), stocks_path, :class => 'tiny button '  %>
      <%= t(:store_amount) %>: <%=@store.balance.to_s + t(:currency) %>
    </th>
  </tr>
  </thead>
  <tbody>
    <% @carts.each do |cart| %>
      <%= render cart %>
    <% end %>
  </tbody>
  
  <% if @carts.count > 0 %>
  <thead>
    <tr>
      <td colspan="3">
        
        <%= t(:sum_amount)%>: <%=@sum_amount.to_s %> <%=t(:currency)%>
        <div class="button-bar">
          <ul class="button-group radius round">
            <li><%= link_to t(:retail_sale), retail_sales_path, :class => 'tiny button ' %></li>
            <li><%= link_to t(:cost_sale), cost_sales_path, :class => 'tiny button ' %></li>
            <li><%= link_to t(:member_sale), new_sale_path, :class => 'tiny button ' %></li>
          </ul>
        </div>
      </td>
    </tr>
  </thead> 
  <%else%>
    <%if @store.category == "I" %>
    <thead>
      <tr>
        <td colspan="3">
        <br><br><br>
          <%= link_to t(:only_money_sale), money_sales_path, :class => 'tiny button' %>
        </td>
      </tr>
    </thead> 
    <%end%>
  <% end %>
  
</table>


<!-- Modal -->
<div id="ajax-modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>