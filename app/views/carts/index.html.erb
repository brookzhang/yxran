<table class="table table-condensed table-striped">
  <thead>
  <tr>
    <th colspan="3">
      <%= link_to t(:add_product), products_path, :class => 'btn '  %>
      <%= t(:none_cart) if @count == 0 %>
    </th>
  </tr>
  </thead>  
  <tbody>
  <% @carts.each do |cart| %>
    <%= render cart %>
  <% end %>
  </tbody>
  <thead>
    <% if @carts.count > 0 %>
    <tr>
      <td colspan="3">
        <div>
          <%= t(:sum_amount)%>: <%=@sum_amount.to_s %> <%=t(:money)%>
          &nbsp;&nbsp;
          
          <%#= link_to t(:to_be_discount), switch_discount_path, :class => 'btn btn-mini '  %>
        </div>
        <div>
          <%= link_to t(:finish), new_sale_path, :class => 'btn btn-warning' %>  
        </div>
      </td>
    </tr>
    <% end %>

  </thead> 
</table>