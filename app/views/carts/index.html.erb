<table class="table table-condensed table-striped">
  <thead>
  <tr>
    <th colspan="3">
      <%= link_to t(:add_product), products_path, :class => 'btn '  %>
      <%= t(:none_cart) if @count == 0 %>
    </th>
  </tr>
  </thead>
  
  <tbody>
  <% @carts.each do |cart| %>
    <%= render cart %>
  <% end %>
  </tbody>
  
  <% if @carts.count > 0 %>
  <thead>
    <tr>
      <td colspan="3">
        
        <%= t(:sum_amount)%>: <%=@sum_amount.to_s %> <%=t(:money)%>
        <div>
          
          <%= link_to t(:normal_sale), new_sale_path(:category => 'N'), :class => 'btn ' %>
          &nbsp;&nbsp;
          <%= link_to t(:cost_sale), new_sale_path(:category => 'C'), :class => 'btn ' %>
          &nbsp;&nbsp;
          <%= link_to t(:member_sale), new_sale_path(:category => 'M'), :class => 'btn ' %>
          
          
        </div>
      </td>
    </tr>
  </thead> 
  <% end %>
  
</table>