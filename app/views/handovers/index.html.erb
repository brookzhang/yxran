<div class="span8">
<table class="table table-condensed">
  <thead>
  <tr>
    <th colspan="3">
      <%= link_to t(:take_over), new_handover_path, :class => 'btn btn-warning' if current_user.store_id.nil?  %>
      <%= link_to t(:hand_over), edit_handover_path(@handover), :class => 'btn btn-warning' unless current_user.store_id.nil?  %>
    </th>
  </tr>
  </thead>
  <thead>
    <tr>
        <th><%= t(:store) %></th>
        <th><%= t(:take_over) %> / <%= t(:hand_over) %></th>
        <th><%= t(:took_at) %></th>                                  
    </tr>
  </thead>   
  <tbody>
  <% @handovers.each do |h| %>
    <tr>
        <td><%= h.store.name %></td>
        <td><%= link_to h.take_amount.to_s + '/' + h.hand_amount.to_s, h  %></td>
        <td><%= h.took_at.to_s(:date_time) %></td>
        <td></td>                                       
    </tr>
  <% end %>
  <tr>
    <td colspan="5">
      <%= link_to t(:back), root_path, :class => 'btn'%>
    </td>
  </tr>
  </tbody>
</table>
</div> 