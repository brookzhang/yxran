<div id="handover-options-take" class="modal" style="display: none;">
  <%= simple_form_for @handover, :url => new_handover_path, :html => {:method => :get, :class => 'form-horizontal' } do |f| %>
    <div class="modal-header">
      <a class="close" data-dismiss="modal">&#215;</a>
      <h3><%= t(:handed_over_stores) %></h3>
    </div>
    <div class="modal-body">
      <%= f.input :store_id, :collection => @stores, :as => :radio_buttons, :label_method => lambda {|r| t(r.name)}, :label => false%>
    </div>
    <div class="modal-footer">
      <%= f.submit t(:select) , :class => "btn" %>
      <a class="btn" data-dismiss="modal" href="#"><%= t(:close) %></a>
    </div>
  <% end %>
</div>