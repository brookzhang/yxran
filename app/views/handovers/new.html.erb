<%= simple_form_for @handover, :html => {:class => 'form-horizontal' } do |f| %>
  <%= f.error_notification %>
  <%= display_base_errors @handover %>
  <%= f.association :store, :collection => @stores, :prompt => t(:choose_a_store), :label_method => lambda {|r| r.name + '  (' + r.balance.to_s + t(:money) + ')' }, :label => t(:store_name), :required => true %>
  <%= f.input :take_remark, :label => t(:take_remark) %>
  <div class="control-group string optional handover_submit">
    <div class="controls">
      <%= f.button :submit, t(:submit), :class => 'btn btn-warning' %>
      &nbsp;&nbsp;&nbsp;&nbsp;
      <%= link_to t(:back), :back, :class => 'btn btn-mini' %>
    </div>
  </div>
<% end %>


